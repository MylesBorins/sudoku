{
  "name": "sudoku",
  "version": "0.0.1",
  "description": "seed for fun and profit",
  "browser": "app/lib/index.js",
  "main": "plugin.js",
  "browserify": {
    "transform": [
      "cssify",
      "jadeify",
      "brfs"
    ]
  },
  "scripts": {
    "start": "npm run build && node server.js",
    "start-dev": "npm run watch & node server.js",
    "test": "npm run lint -s && npm run build && npm run tape",
    "watch-tape": "nodemon --ignore node_modules/ -e js,json,jade,css --exec 'npm run tape'",
    "tape": "browserify test/test-*.js --debug | testling | tap-spec",
    "build": "browserify app/index.js | uglifyjs > public/bundle.js",
    "watch": "watchify app/index.js -o public/bundle.js --debug --verbose",
    "lint-eslint": "eslint app/",
    "lint-jscs": "jscs app/",
    "lint": "npm run lint-eslint && npm run lint-jscs"
  },
  "devDependencies": {
    "eslint": "^0.8.2",
    "jscs": "^1.5.8",
    "nodemon": "^1.2.1",
    "tap-spec": "^1.0.0",
    "testling": "^1.7.1"
  },
  "author": "TheAlphaNerd",
  "license": "ISC",
  "dependencies": {
    "brfs": "^1.1.1",
    "browserify": "^6.0.2",
    "cssify": "^0.6.0",
    "hapi": "^6.5.1",
    "jade": "^1.7.0",
    "jadeify": "^2.6.0",
    "lodash": "^2.4.1",
    "tape": "^3.0.0",
    "uglify-js": "^2.4.15",
    "watchify": "^1.0.1"
  }
}
